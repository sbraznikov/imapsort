# Example

require 'imapsort'

Imapsort.new do
	login :server => 'my.email.server',
          :user   => 'my_user_name',
          :pass   => 'my_password'

	from 'foo@bar'; move 'INBOX.foo'
	from 'bar123@foo'; mark 'Seen'; move 'INBOX.bar123'
	from 'foo234@foo'; move 'INBOX.Trash'
	from 'bar@foo'; remove
end
